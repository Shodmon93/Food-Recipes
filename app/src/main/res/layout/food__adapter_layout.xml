<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/food_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:padding="4dp"
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/food_image"
        android:layout_alignStart="@id/food_image"
        android:layout_alignEnd="@id/food_image"
        android:fontFamily="sans-serif-thin"
        android:background="@drawable/newfont1"
        android:text="Shurbocha"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:padding="4dp"
        android:id="@+id/food_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/food_name"
        android:layout_alignStart="@id/food_name"
        android:layout_alignEnd="@id/food_image"
        android:background="@drawable/newfont"
        android:fontFamily="@font/fondamento"
        android:text="qwertyuiop asdfghjkl zxcvbnm"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="11sp"
        android:textStyle="italic"/>

</RelativeLayout>